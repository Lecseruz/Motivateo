<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/body_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/action_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/state_task_button"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/tasks"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/state_shop_button"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/shop"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/state_task_button" />

        <Button
            android:id="@+id/state_settings_button"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/state_shop_button" />
    </RelativeLayout>
</LinearLayout>