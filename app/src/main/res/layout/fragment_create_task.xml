<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <EditText
        android:id="@+id/task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <Button
        android:id="@+id/button_set_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_time"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/task_name"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/repeat"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/button_set_time"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_recall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recall"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/button_repeat"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/count"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/button_recall"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/button_count"
        android:layout_alignParentStart="true" />

</RelativeLayout>